{
  "name": "ui",
  "version": "1.0.0",
  "description": "UI Components and themes for all projects",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "vite build && npm run package",
    "check-updates": "npx npm-check-updates",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run",
    "lint": "npm run prettier -- --check . && eslint .",
    "format": "npm run prettier -- --write .",
    "prettier": "prettier --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss",
    "watch": "svelte-package --watch",
    "storybook": "storybook dev -p 6006 -s static",
    "build-storybook": "storybook build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./app.css": {
      "import": "./dist/app.css",
      "require": "./dist/app.css"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "@sveltejs/kit": "^1.25.0",
    "svelte": "*"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/addon-storysource": "^7.5.3",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/addon-svelte-csf": "^4.0.11",
    "@storybook/blocks": "^7.5.3",
    "@storybook/sveltekit": "^7.5.3",
    "@storybook/testing-library": "^0.2.2",
    "@sveltejs/adapter-auto": "^2.1.1",
    "@sveltejs/kit": "^1.27.6",
    "@sveltejs/package": "^2.2.2",
    "@types/node": "^20.9.0",
    "autoprefixer": "^10.4.16",
    "bits-ui": "^0.9.7",
    "clsx": "^2.0.0",
    "eslint": "^8.53.0",
    "eslint-config-custom": "*",
    "eslint-plugin-storybook": "^0.6.15",
    "lucide-svelte": "^0.292.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "publint": "^0.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.5.3",
    "svelte": "^4.2.3",
    "svelte-check": "^3.6.0",
    "tailwind-merge": "^2.0.0",
    "tailwind-variants": "^0.1.18",
    "tailwindcss": "^3.3.5",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-tailwind-purgecss": "^0.1.3",
    "vitest": "^0.34.6"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
