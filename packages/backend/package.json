{
  "name": "backend",
  "version": "1.0.0",
  "description": "Database schema, client and migrations",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "create-user": "env-cmd -f ../../.env npx tsx ./src/scripts/create-user.ts",
    "check-updates": "npx npm-check-updates",
    "format": "prettier --write .",
    "generate": "drizzle-kit generate:sqlite",
    "lint": "prettier --check . && eslint .",
    "migrate": "env-cmd -f ../../.env npx tsx ./src/scripts/migrate.ts",
    "studio": "env-cmd -f ../../.env npx drizzle-kit studio",
    "watch": "tsc --watch"
  },
  "devDependencies": {
    "@inquirer/prompts": "^3.3.0",
    "@libsql/client": "0.3.6",
    "@lucia-auth/adapter-sqlite": "^2.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/uuid": "^9.0.7",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.2",
    "drizzle-orm": "^0.29.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "lucia": "^2.7.4",
    "prettier": "^3.1.0",
    "tsx": "^4.1.2",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1"
  },
  "type": "module"
}
